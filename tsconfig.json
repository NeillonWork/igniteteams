{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@assets/*":      ["./src/assets/*"],
      "@components/*":  ["./src/components/*"],
      "@screens/*":     ["./src/screens/*"],
      "@utils/*":       ["./src/utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
